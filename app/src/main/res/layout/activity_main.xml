<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"
    android:orientation="vertical"
    tools:context="amsi.dei.estg.ipleiria.pt.ficha4.MainActivity"
    android:layout_weight="1" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtViewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2160475@my.ipleiria.pt"
        android:textAlignment="center"
        android:layout_weight="0.22" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:onClick="onclickEst"
        android:text="VER DETALHES LIVRO (ESTÁTICO)" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:onClick="onClickDin"
        android:text="VER DETALHES LIVRO (DINAMICO)" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:onClick="OnClickEmail"
        android:text="ENVIAR EMAIL" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_weight="0.13" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="onclicklista"
        android:text="Lista de livros" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:onClick="onClickGrelha"
        android:text="Grelha de livros" />
</LinearLayout>
